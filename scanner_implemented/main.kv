<ScreenOne>:
    name: "first"
    do_default_tab: False
    TabbedPanelItem:
        text: "Welcome"
        BoxLayout:
            orientation: 'vertical'
            Button:
                background_color: (1.8,2.5,1.68)
                pos_hint: {'center_x': 0.5}
                text: "I want to scan something"
                on_release: app.root.current = "ML"
            Button:
                background_color: (1.8,2.2,1.68)
                pos_hint: {'center_x': 0.5}
                text: "No barcode?"
                on_release: app.root.current = "second"

<ScreenMLModel>:
    name: "ML"
    Button:
        background_color: (1.8,2.2,1.68)
        pos_hint: {'center_x': 0.5}
        text: "Click me to open barcode scanner!"
        on_release: app.main()

